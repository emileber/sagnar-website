{
  "name": "boilerplate_astro_react",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_astro_react",
  "scripts": {
    "dev": "astro dev",
    "dev:verbose": "astro dev --verbose",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "check": "astro check --tsconfig ./tsconfig.json",
    "lint": "biome check ./src && pnpm check",
    "format": "biome check --write ./src",
    "biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:c": "vitest run --coverage",
    "test:w": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest run related",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:4321",
    "check:update": "pnpm update --interactive --latest",
    "update:pnpm": "corepack use pnpm@latest",
    "detect:duplicates": "pnpx jscpd ./src/**/*.ts",
    "postinstall": "if [ -d .git ]; then pnpx lefthook install; fi"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@astrojs/react": "4.2.7",
    "astro": "5.7.13",
    "clsx": "2.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/rss": "4.0.11",
    "@astrojs/sitemap": "3.4.0",
    "@astrojs/ts-plugin": "1.10.4",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@iconify/json": "2.2.339",
    "@playwright/test": "1.52.0",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.2",
    "@semantic-release/npm": "12.0.1",
    "@svgr/core": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom-global": "3.0.7",
    "@types/node": "22.15.18",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react-swc": "3.9.0",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "3.1.3",
    "cssnano": "7.0.7",
    "dotenv": "16.5.0",
    "jsdom": "26.1.0",
    "jsdom-global": "3.0.2",
    "lefthook": "1.11.13",
    "postcss": "8.5.3",
    "postcss-import": "16.1.0",
    "postcss-preset-env": "10.1.6",
    "semantic-release": "24.2.4",
    "typescript": "5.8.3",
    "unplugin-icons": "22.1.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  }
}
