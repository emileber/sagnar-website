---
import MassivelyLayout from 'components/layouts/MassivelyLayout/MassivelyLayout.astro'
import Button from 'components/atoms/Button/Button.astro'
import SocialLinks from 'components/atoms/SocialLinks/SocialLinks.astro'
import TeamMemberCard from 'components/molecules/TeamMemberCard/TeamMemberCard.astro'
import ContactForm from 'components/molecules/ContactForm/ContactForm.astro'
import FooterSection from 'components/atoms/FooterSection/FooterSection.astro'

const socialLinks = [
  { platform: 'instagram', url: '#', icon: 'fa-instagram', label: 'Instagram' },
  { platform: 'facebook', url: '#', icon: 'fa-facebook-f', label: 'Facebook' }
]

const socialLinksWithTwitter = [
  { platform: 'twitter', url: '#', icon: 'fa-twitter', label: 'Twitter' },
  { platform: 'facebook', url: '#', icon: 'fa-facebook-f', label: 'Facebook' },
  { platform: 'instagram', url: '#', icon: 'fa-instagram', label: 'Instagram' },
  { platform: 'github', url: '#', icon: 'fa-github', label: 'GitHub' }
]
---

<MassivelyLayout title="SAGNAR - French Canadian Enduro Mountain Bike Team" description="Independent French Canadian enduro mountain bike team featuring elite riders and passionate trail enthusiasts">
  <!-- Intro -->
  <div id="intro">
    <img src="/images/SAGNAR-white-transparent.png" alt="SAGNAR" style="max-width: 400px; height: auto;" />
    <p>Independent French Canadian enduro mountain bike team<br />
    Pushing limits on the trails of Quebec and beyond</p>
    <ul class="actions">
      <li><Button href="#header" variant="icon" icon="fa-arrow-down" classes="scrolly">Meet the Team</Button></li>
    </ul>
  </div>

  <!-- Header -->
  <header id="header">
    <a href="/" class="logo">SAGNAR</a>
  </header>

  <!-- Nav -->
  <nav id="nav">
    <ul class="links">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="#team">Team</a></li>
      <li><a href="#footer">Contact</a></li>
    </ul>
    <SocialLinks links={socialLinksWithTwitter} />
  </nav>

  <!-- Main -->
  <div id="main">
    <!-- About Section -->
    <article class="post featured">
      <header class="major">
        <h2>About SAGNAR</h2>
        <p>We are an independent French Canadian enduro mountain bike team based in Quebec.<br />
        Our mission is to push the boundaries of enduro racing while representing<br />
        the passion and spirit of Canadian mountain biking.</p>
      </header>
      <a href="#" class="image main"><img src="/images/A7400045_Edited.jpg" alt="SAGNAR Team Racing" /></a>
    </article>

    <!-- Team Members -->
    <section class="posts" id="team">
      <TeamMemberCard 
        name="Émile J. Bergeron"
        role="Team Manager"
        image="/images/A7400086_Edited.jpg"
        description="As team manager, Émile coordinates race schedules, manages logistics, and ensures the team operates smoothly. His passion for enduro racing and organizational skills keep SAGNAR competitive at the highest level."
      />
      <TeamMemberCard 
        name="Marc-Olivier Lévesque"
        role="Elite Rider"
        image="/images/A7400135_Edited-2.jpg"
        description="Our elite level rider, Marc-Olivier brings years of competitive experience to SAGNAR. Known for his technical skills and fearless approach to challenging terrain, he represents the team's racing spirit."
      />
    </section>

  </div>

  <!-- Footer -->
  <footer id="footer">
    <section>
      <ContactForm />
    </section>
    <section class="split contact">
      <FooterSection title="Location" variant="alt">
        <p>Quebec, Canada<br />Enduro trails and racing circuits</p>
      </FooterSection>
      <FooterSection title="Team Manager">
        <p>Émile J. Bergeron</p>
      </FooterSection>
      <FooterSection title="Email">
        <p><a href="mailto:contact@sagnar.team">contact@sagnar.team</a></p>
      </FooterSection>
      <FooterSection title="Follow Us">
        <SocialLinks variant="alt" links={socialLinks} />
      </FooterSection>
    </section>
  </footer>

  <!-- Copyright -->
  <div id="copyright">
    <ul><li>&copy; 2024 SAGNAR</li><li>French Canadian Enduro Team</li></ul>
  </div>
</MassivelyLayout>
