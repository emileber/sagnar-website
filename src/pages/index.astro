---
import MassivelyLayout from 'components/layouts/MassivelyLayout/MassivelyLayout.astro'
import Button from 'components/atoms/Button/Button.astro'
import SocialLinks from 'components/atoms/SocialLinks/SocialLinks.astro'
import TeamMemberCard from 'components/molecules/TeamMemberCard/TeamMemberCard.astro'
import ContactForm from 'components/molecules/ContactForm/ContactForm.astro'
import FooterSection from 'components/atoms/FooterSection/FooterSection.astro'
import { siteConfig } from '../config'

const socialLinks = [
  { platform: 'instagram', url: siteConfig.social.instagram, icon: 'fa-instagram', label: 'Instagram' }
]
---

<MassivelyLayout title={`${siteConfig.name} - French Canadian Enduro Mountain Bike Team`} description={siteConfig.description}>
  <!-- Intro -->
  <div id="intro">
    <img src="/images/SAGNAR-white-transparent.png" alt="SAGNAR" style="max-width: 400px; height: auto;" />
    <p>Independent French Canadian enduro mountain bike team<br />
    Pushing limits on the trails of Quebec and beyond</p>
    <ul class="actions">
      <li><Button href="#header" variant="icon" icon="fa-arrow-down" classes="scrolly">Meet the Team</Button></li>
    </ul>
  </div>

  <!-- Header -->
  <header id="header">
    <a href="/" class="logo">{siteConfig.name}</a>
  </header>

  <!-- Nav -->
  <nav id="nav">
    <ul class="links">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="#team">Team</a></li>
      <li><a href="#footer">Contact</a></li>
    </ul>
    <SocialLinks links={socialLinks} />
  </nav>

  <!-- Main -->
  <div id="main">
    <!-- About Section -->
    <article class="post featured">
      <header class="major">
        <h2>About {siteConfig.name}</h2>
        <p>{siteConfig.description} based in {siteConfig.team.location}.<br />
        Our mission is to push the boundaries of enduro racing while representing<br />
        the passion and spirit of Canadian mountain biking.</p>
      </header>
      <a href="#" class="image main"><img src="/images/A7400045_Edited.jpg" alt="SAGNAR Team Racing" /></a>
    </article>

    <!-- Team Members -->
    <section class="posts" id="team">
      {siteConfig.members.map(member => (
        <TeamMemberCard 
          name={member.name}
          role={member.role}
          image={member.image}
          description={member.description}
        />
      ))}
    </section>

  </div>

  <!-- Footer -->
  <footer id="footer">
    <section>
      <ContactForm />
    </section>
    <section class="split contact">
      <FooterSection title="Location" variant="alt">
        <p>{siteConfig.team.location}<br />Enduro trails and racing circuits</p>
      </FooterSection>
      <FooterSection title="Team Manager">
        <p>{siteConfig.members.find(m => m.role.includes('Manager'))?.name}</p>
      </FooterSection>
      <FooterSection title="Email">
        <p><a href={`mailto:${siteConfig.team.email}`}>{siteConfig.team.email}</a></p>
      </FooterSection>
      <FooterSection title="Follow Us">
        <SocialLinks variant="alt" links={socialLinks} />
      </FooterSection>
    </section>
  </footer>

  <!-- Copyright -->
  <div id="copyright">
    <ul><li>&copy; 2024 {siteConfig.name}</li><li>French Canadian Enduro Team</li></ul>
  </div>
</MassivelyLayout>
