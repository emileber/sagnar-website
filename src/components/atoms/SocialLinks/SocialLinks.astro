---
import { siteConfig } from '../../../config'

export interface Props {
  variant?: 'default' | 'alt'
  links?: {
    platform: string
    url: string
    icon: string
    label: string
  }[]
}

const { 
  variant = 'default',
  links = [
    { platform: 'instagram', url: siteConfig.social.instagram, icon: 'fa-instagram', label: 'Instagram' }
  ]
} = Astro.props

const baseClass = variant === 'alt' ? 'icons alt' : 'icons'
---

<ul class={baseClass}>
  {links.map(link => (
    <li>
      <a href={link.url} class={`icon brands ${variant === 'alt' ? 'alt' : ''} ${link.icon}`}>
        <span class="label">{link.label}</span>
      </a>
    </li>
  ))}
</ul>